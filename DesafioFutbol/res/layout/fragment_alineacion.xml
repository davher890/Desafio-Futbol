<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="app.android.desafiofutbol.MainActivity$PlaceholderFragment" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <GridLayout
                android:id="@+id/layoutPorterosTit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutporteros"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewPortTit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutDefensasTit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutdefensas"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewDefTit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill_horizontal" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutMediosTit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutmedios"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewMedTit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutDelanterosTit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutdelanteros"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewDelTit"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical" >

            <GridLayout
                android:id="@+id/layoutPorterosSup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutporteros"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewPorSup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutDefensasSup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutdefensas"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewDefSup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutMediosSup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutmedios"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewMedSup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>

            <GridLayout
                android:id="@+id/layoutDelanterosSup"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="4dp"
                android:layout_weight="1"
                android:background="@drawable/layoutdelanteros"
                android:columnCount="2"
                android:orientation="vertical"
                android:scrollbars="vertical" >

                <ListView
                    android:id="@+id/listViewDelSup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="fill" >
                </ListView>
            </GridLayout>
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/buttonGuardarAli"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="@drawable/buttondesafio"
        android:text="Button" />

</LinearLayout>
